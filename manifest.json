{
   "manifest_version": 2,
   "name": "Automation Samurai",
   "short_name": "Samurai",
   "update_url": "https://clients2.google.com/service/update2/crx",
   "version": "1.0.1",

   "background": {
      "persistent": true,
      "scripts": [ "background.js" ]
   },
   "permissions": [ "<all_urls>", "tabs", "webRequest", "webRequestBlocking" ],
   "web_accessible_resources": [ "panel.js", "panel.html", "custom.js" ],
   "browser_action": {
      "default_icon": {
         "19": "samurai.png"
      },
      "default_popup": "panel.html",
      "default_title": "Automation Samurai"
   },
   "content_security_policy": "script-src 'self' https://www.google-analytics.com/analytics.js; object-src 'self'",
   "icons": {
      "16": "samurai.png",
      "48": "samurai.png"
   }
}
